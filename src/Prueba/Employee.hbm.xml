<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="Prueba.Employee" table="employee">
        <meta attribute="class-information">
            Esto es el fichero que hace el mapeo de la clase Employee en la tabla employee
        </meta>
        <id name="id" type="int" column="id">
                <generator class="native"/>
        </id>
        <property name="First_name" column="first_name" type="string"/>
        <property name="last_name" column="last_name" type="string"/>
        <property name="salary" column="salary" type="int"/>


    </class>
</hibernate-mapping>